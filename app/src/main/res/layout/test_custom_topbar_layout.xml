<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cpf.com.testlauncher.MainActivity">

    <cpf.com.testlauncher.custom_view.TestCustomTopBar
        android:id="@+id/test_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        topbar:title = "自定义标题"
        topbar:titleSize = "10dp"
        topbar:titleColor = "#ffffff"
        topbar:leftButtonText = "左按钮"
        topbar:leftButtonBackground = "#9F79EE"
        topbar:leftButtonTextColor = "#ffffff"
        topbar:rightButtonText = "右按钮"
        topbar:rightButtonBackground = "#9F79EE"
        topbar:rightButtonTextColor = "#ffffff"
        >

    </cpf.com.testlauncher.custom_view.TestCustomTopBar>

</LinearLayout>
